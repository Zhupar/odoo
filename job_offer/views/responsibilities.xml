<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_job_responsibilities_forms">
        <field name="name">hr.job.responsibility.form</field>
        <field name="model">hr.job.responsibility</field>
        <field name="arch" type="xml">
            <form>
                <field name="name"/>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="view_job_responsibilities_tree">
        <field name="name">hr.job.responsibility.tree</field>
        <field name="model">hr.job.responsibility</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="responsibilities_action" model="ir.actions.act_window">
        <field name="name">Add Responsibilities</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.job.responsibility</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                add responsibilities
            </p>
        </field>
    </record>



</odoo>